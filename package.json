{
  "name": "yieldfarming.info",
  "version": "1.0.0",
  "description": "Boilerplate for a Static website using EJS and SASS",
  "main": "index.js",
  "scripts": {
    "start": "browser-sync start -s 'dist' -f 'dist' --no-open --no-notify --reload-debounce 50",
    "setup-for-dev": "NODE_ENV=development npm-run-all --sequential rmprod copy-to-dist build:html",
    "dev": "npm run setup-for-dev && npm-run-all --parallel start watch:*",
    "build": "NODE_ENV=production npm-run-all --sequential rmprod copy-to-dist minify:js minify:css prepend-banner hash-filenames minify:html",
    "build:html": "NODE_ENV=development babel-node build-tools/ejs-to-html.mjs",
    "build:js": "NODE_ENV=development npx webpack --mode=development",
    "build:css": "NODE_ENV=development npm run sass && npm run autoprefixer",
    "watch:js": "NODE_ENV=development npx webpack --mode=development --watch --stats=minimal",
    "watch:css": "NODE_ENV=development npm run sass && sass -w src/css:dist/css --source-map",
    "minify:html": "NODE_ENV=production npm run build:html && babel-node build-tools/minify-html.js",
    "minify:js": "NODE_ENV=production npx webpack --mode=production",
    "minify:css": "NODE_ENV=production npm run build:css && babel-node build-tools/minify-css.js",
    "sass": "sass src/css:dist/css --source-map",
    "autoprefixer": "postcss dist/css/**/*.css --use autoprefixer -r",
    "copy-to-dist": "babel-node build-tools/copy-to-dist.mjs",
    "hash-filenames": "babel-node build-tools/hash-filenames.js",
    "prepend-banner": "babel-node build-tools/prepend-banner.js",
    "rmprod": "rimraf filename-map.json && rimraf dist",
    "prettier": "prettier --write 'src/**/*.{js,css,scss,json,html}'",
    "deploy": "gh-pages -d dist"
  },
  "author": "Jongseung Lim",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.28.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.28.0",
    "assert": "^2.1.0",
    "autoprefixer": "^7.2.6",
    "babel-loader": "^9.2.1",
    "babel-polyfill": "^6.26.0",
    "browser-sync": "^2.26.7",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "clean-css": "^4.2.3",
    "cross-env": "^7.0.2",
    "crypto-browserify": "^3.12.1",
    "ejs": "^2.7.4",
    "gh-pages": "^3.1.0",
    "html-minifier": "^3.5.21",
    "https-browserify": "^1.0.0",
    "node-watch": "^0.6.4",
    "npm-run-all": "^4.1.5",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss-cli": "^4.1.1",
    "prettier": "^1.19.1",
    "process": "^0.11.10",
    "rimraf": "^2.7.1",
    "sass": "^1.89.2",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.4",
    "webpack": "^5.101.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@reown/appkit": "^1.7.17",
    "@reown/appkit-adapter-ethers5": "^1.7.17",
    "@reown/appkit-controllers": "^1.7.17",
    "@reown/appkit-scaffold-ui": "^1.7.17",
    "@reown/appkit-ui": "^1.7.17",
    "@reown/appkit-utils": "^1.7.17",
    "@reown/appkit-wallet": "^1.7.17",
    "asciichart": "^1.5.24",
    "clear": "^0.1.0",
    "cli-color": "^2.0.0",
    "console-table-printer": "^2.7.3",
    "core-js": "^3.44.0",
    "diff": "^4.0.2",
    "dompurify": "^2.0.8",
    "ethcall": "^4.8.13",
    "ethers": "^5.3.0",
    "fuse.js": "^6.4.1",
    "jquery": "^3.5.1",
    "lodash": "^4.17.20",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "match-sorter": "^6.3.1",
    "numbro": "^2.3.2",
    "picturefill": "^3.0.3",
    "regenerator-runtime": "^0.14.1"
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "IE 10"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yieldfarming/yieldfarming.git"
  },
  "keywords": [
    "EJS",
    "SASS",
    "Webpack",
    "Boilerplate",
    "Static",
    "NodeJS",
    "lazy loading",
    "front-end"
  ],
  "bugs": {
    "url": "https://github.com/yieldfarming/yieldfarming/issues"
  },
  "homepage": "https://yieldfarming.info"
}
